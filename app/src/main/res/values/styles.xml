<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseAppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="Line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/divide_gray</item>
    </style>

    <style name="Line_V">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/divide_gray</item>
    </style>

    <style name="Line_ver">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/divide_gray</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="titleBarDrawable">@drawable/bg_toolbar</item>
        <!--<item name="statusBarDrawable">@drawable/bg_status_bar</item>-->
        <!--<item name="fillStatusBar">true</item>-->
        <item name="titleBarHeight">@dimen/grid_48</item>
        <item name="showBottomLine">false</item>
        <item name="centerTextColor">@color/white</item>
        <item name="rightType">textView</item>
        <item name="rightTextColor">@color/white</item>
        <item name="centerType">textView</item>
    </style>

    <style name="ToolbarStyle_White" parent="ToolbarStyle">
        <item name="titleBarDrawable">@color/white</item>
        <item name="statusBarDrawable">@color/white</item>
        <item name="centerTextColor">@color/text_black</item>
        <item name="rightType">textView</item>
        <item name="rightTextColor">@color/colorPrimary</item>
    </style>

    <style name="ToolbarStyle_With_Back_Icon" parent="ToolbarStyle">
        <item name="leftImageResource">@mipmap/icon_common_return_white</item>
        <item name="leftType">imageButton</item>
    </style>

    <style name="ToolbarStyle_White_With_Back_Icon" parent="ToolbarStyle">
        <item name="titleBarDrawable">@color/white</item>
        <item name="statusBarDrawable">@color/white</item>
        <item name="centerTextColor">@color/text_black</item>
        <item name="leftImageResource">@mipmap/icon_login_return</item>
        <item name="leftType">imageButton</item>
        <item name="bottomShadowHeight">0dp</item>
        <item name="rightTextColor">@color/colorPrimary</item>
    </style>

    <style name="Text_Style_Title">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Text_Style_Sub_Title">
        <item name="android:textSize">@dimen/text_size_sub_title</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
    </style>

    <!--自适应绿色实心按钮-->
    <style name="Btn_Green_Auto_Width">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="rv_cornerRadius">@dimen/grid_5</item>
        <item name="rv_backgroundColor">@color/green</item>
        <item name="android:paddingLeft">@dimen/grid_20</item>
        <item name="android:paddingRight">@dimen/grid_20</item>
        <item name="android:paddingTop">@dimen/grid_2</item>
        <item name="android:paddingBottom">@dimen/grid_2</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:gravity">center</item>
    </style>

    <!--自适应绿色空心按钮-->
    <style name="Btn_Green_Stroke_Auto_Width">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="rv_cornerRadius">@dimen/grid_5</item>
        <item name="rv_strokeColor">@color/green</item>
        <item name="rv_strokeWidth">1px</item>
        <item name="android:paddingLeft">@dimen/grid_20</item>
        <item name="android:paddingRight">@dimen/grid_20</item>
        <item name="android:paddingTop">@dimen/grid_2</item>
        <item name="android:paddingBottom">@dimen/grid_2</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:gravity">center</item>
    </style>

    <!--自适应绿色实心按钮-->
    <style name="Btn_Blue_Auto_Width" parent="Btn_Green_Auto_Width">
        <item name="rv_backgroundColor">@color/btn_blue_nor</item>
        <item name="rv_backgroundPressColor">@color/btn_blue_pre</item>
    </style>
    <!--自适应蓝色色空心按钮-->
    <style name="Btn_Blue_Stroke_Auto_Width" parent="Btn_Green_Stroke_Auto_Width">
        <item name="rv_strokeColor">@color/btn_blue_nor</item>
        <item name="rv_strokePressColor">@color/btn_blue_pre</item>
        <item name="android:textColor">@color/text_blue</item>
    </style>

    <!--无滚动条效果-->
    <style name="RecycleView_Style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:divider">@null</item>
    </style>

    <style name="EditText_Normal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#00ffffff</item>
        <item name="android:textColorHint">@color/text_gray</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:singleLine">true</item>
    </style>

    <!--通用输入栏样式-->
    <style name="XEdittext_Style" parent="EditText_Normal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/grid_50</item>
        <item name="android:background">@drawable/bg_white_with_bottom_line</item>
        <item name="android:maxLength">18</item>
        <item name="android:paddingLeft">@dimen/grid_5</item>
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>

    <style name="XItemview_Style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/grid_45</item>
        <item name="XItemView_type">TextAndMoreIcon</item>
        <item name="XItemView_more_icon">@mipmap/icon_common_enter</item>
        <item name="android:background">@drawable/bg_white_with_bottom_line</item>
    </style>

    <style name="SwitchButtonStyle">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>


    <!-- 为了解决Tab英文自动大写问题 -->
    <style name="TextAppearance.Design.Tab" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">@dimen/design_tab_text_size</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="TabLayoutTextStyle" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">@dimen/text_size_sub_title</item>
    </style>

</resources>
