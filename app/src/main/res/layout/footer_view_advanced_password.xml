<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/grid_45"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:gravity="center_vertical"
        android:text="@string/密码相关"
        android:textColor="@color/text_blue"
        android:textSize="@dimen/text_size_sub_title" />

    <RelativeLayout
        android:id="@+id/rl_power_on_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/grid_45"
        android:background="@drawable/bg_white_with_bottom_line">
        <View style="@style/Line"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_sub_title"
            android:text="@string/开机密码"
            />
        <TextView
            android:id="@+id/tv_power_on_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin"
            android:layout_alignParentRight="true"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_size_sub_title"
            android:drawableRight="@mipmap/icon_common_enter"
            android:drawablePadding="@dimen/grid_8"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_probation_period_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/grid_45"
        android:background="@drawable/bg_white_with_bottom_line">
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_sub_title"
            android:text="@string/试用期密码"
            />
        <TextView
            android:id="@+id/tv_probation_period_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin"
            android:layout_alignParentRight="true"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_size_sub_title"
            android:drawableRight="@mipmap/icon_common_enter"
            android:drawablePadding="@dimen/grid_8"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/grid_45"
        android:background="@color/text_blue"
        android:gravity="center"
        android:text="@string/确认设置"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_sub_title"
        />
</LinearLayout>