<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/grid_45">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/grid_45"
            android:layout_marginRight="@dimen/margin"
            android:layout_toLeftOf="@+id/tv_status"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin"
            android:text="示例电站"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_title" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/bg_home_const"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin"
            android:text="建设中"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_sub_title" />

    </RelativeLayout>

    <View style="@style/Line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/grid_95">

        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="@dimen/grid_50"
            android:layout_height="@dimen/grid_50"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/margin"
            android:layout_toRightOf="@id/iv_img"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/发电功率"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_size_title" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:text="--kWh"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_size_title" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/grid_8"
                android:layout_marginTop="@dimen/grid_8">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/今日发电"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_size_title" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:text="--kWh"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_size_title" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/今日收益"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_size_title" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:text="--元"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_size_title" />
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>

    <View style="@style/Line" />

</LinearLayout>