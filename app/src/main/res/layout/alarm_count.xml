<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:padding="@dimen/grid_15">

    <com.flyco.roundview.RoundRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/grid_70"
        android:layout_marginRight="@dimen/grid_7"
        android:layout_weight="1"
        app:rv_backgroundColor="@color/yellow"
        app:rv_cornerRadius="@dimen/grid_5"
        app:rv_isRippleEnable="false">

        <ImageView
            android:layout_width="@dimen/grid_45"
            android:layout_height="@dimen/grid_45"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/grid_30"
            android:src="@mipmap/icon_alarm_commonly" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/grid_30"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_alarm_commonly_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="@dimen/grid_25"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/grid_5"
                android:text="@string/告警"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_main" />
        </LinearLayout>
    </com.flyco.roundview.RoundRelativeLayout>

    <com.flyco.roundview.RoundRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/grid_70"
        android:layout_marginLeft="@dimen/grid_7"
        android:layout_weight="1"
        app:rv_backgroundColor="@color/red"
        app:rv_cornerRadius="@dimen/grid_5"
        app:rv_isRippleEnable="false">

        <ImageView
            android:layout_width="@dimen/grid_45"
            android:layout_height="@dimen/grid_45"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/grid_30"
            android:src="@mipmap/icon_alarm_serious" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/grid_30"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_alarm_serious_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:textColor="@color/white"
                android:textSize="@dimen/grid_25"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/grid_5"
                android:text="@string/故障"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_main" />
        </LinearLayout>
    </com.flyco.roundview.RoundRelativeLayout>
</LinearLayout>