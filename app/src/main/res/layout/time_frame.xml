<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_with_bottom_line"
    android:clickable="true"
    app:ios="false"
    app:leftSwipe="true"
    app:swipeEnable="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/grid_50"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="@dimen/grid_90"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_sub_title" />

        <com.flyco.roundview.RoundTextView
            android:id="@+id/tv_start_time"
            android:layout_width="@dimen/grid_70"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/grid_23"
            android:gravity="center"
            android:text="00:00"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_size_sub_title"
            android:paddingTop="@dimen/grid_4"
            android:paddingBottom="@dimen/grid_4"
            app:rv_cornerRadius="@dimen/grid_5"
            app:rv_strokeWidth="1px"
            app:rv_strokeColor="@color/text_gray"
            />

        <TextView
            android:layout_width="@dimen/grid_14"
            android:layout_height="wrap_content"
            android:text="~"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_size_sub_title"
            android:gravity="center"
            android:layout_marginRight="@dimen/grid_23"
            />

        <com.flyco.roundview.RoundTextView
            android:id="@+id/tv_end_time"
            android:layout_width="@dimen/grid_70"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="23:59"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_size_sub_title"
            android:paddingTop="@dimen/grid_4"
            android:paddingBottom="@dimen/grid_4"
            app:rv_cornerRadius="@dimen/grid_5"
            app:rv_strokeWidth="1px"
            app:rv_strokeColor="@color/text_gray"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/grid_120"
        android:layout_height="match_parent"
        android:layout_marginBottom="1px"
        android:background="@color/red"
        android:gravity="center"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/删除"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_title" />

    </LinearLayout>
</com.mcxtzhang.swipemenulib.SwipeMenuLayout>


